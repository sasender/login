pipeline {

    agent {
        label 'NODEJS'
    }
    tools {
        go 'go-1.1'
    }
    environment {
        
    }
    stages {

        stage('Download Dependencies') {
            steps {
                sh '''
                 export GOPATH=/home/ubuntu/go && export GOBIN=$GOPATH/bin && go get && go build
            '''
            }
        }
        stage('prepare Artifacts') {
            steps {
                sh '''
                zip -r login.zip *
            '''
            }

        }
        stage('upload Artifacts') {
            steps {
                sh '''
           curl -f -v -u admin:admin --upload-file login.zip http://10.1.2.210:8081/repository/login/login.zip
        '''
            }
        }
    }
}